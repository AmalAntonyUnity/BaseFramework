@model Result<UserResponseDTO>

@{
    ViewData["Title"] = "EditUser";
}

<h1>EditUser</h1>

<h4>RegistrationRequestDTO</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditUser" enctype="multipart/form-data">
            <input hidden asp-for="Response.userId"/>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Response.user.userName" class="control-label"></label>
                <input asp-for="Response.user.userName" readonly class="form-control" />
                <span asp-validation-for="Response.user.userName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Response.user.email" class="control-label"></label>
                <input asp-for="Response.user.email" class="form-control" />
                <span asp-validation-for="Response.user.email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Response.user.phoneNumber" class="control-label"></label>
                <input asp-for="Response.user.phoneNumber" type="tel" class="form-control" />
                <span asp-validation-for="Response.user.phoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Response.firstName" class="control-label"></label>
                <input asp-for="Response.firstName" class="form-control" />
                <span asp-validation-for="Response.firstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Response.lastName" class="control-label"></label>
                <input asp-for="Response.lastName" class="form-control" />
                <span asp-validation-for="Response.lastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Response.image" class="control-label"></label>
                <input asp-for="Response.image" hidden class="form-control" />
                <input asp-for="Response.File" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Response.dob" class="control-label"></label>
                <input asp-for="Response.dob" type="date" class="form-control" />
                <span asp-validation-for="Response.dob" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Response.doj" class="control-label"></label>
                <input asp-for="Response.doj" type="date" readonly class="form-control" />
                <span asp-validation-for="Response.doj" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Response.gender" class="control-label"></label>
                <select asp-for="Response.gender" class="form-control select2">
                    <option value="">--Select Gender--</option>
                    <option value="Male">Male</option>
                    <option value="Female">Female</option>
                </select>
                <span asp-validation-for="Response.gender" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Response.address" class="control-label"></label>
                <input asp-for="Response.address" class="form-control" />
                <span asp-validation-for="Response.address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="UsersList">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

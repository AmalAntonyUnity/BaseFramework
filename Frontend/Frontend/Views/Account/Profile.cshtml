                            {
                                <text><img src="~/Images/@pic" style="object-fit:contain" alt="image"></text>
                            }
                            else
                            {
                                <text><img src="~/assets/media/avatars/blank.png" style="object-fit:contain" alt="image"></text>
                            }
                        }

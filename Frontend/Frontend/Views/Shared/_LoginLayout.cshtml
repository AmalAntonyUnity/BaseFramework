                                        </div>
                                    </div>
                                    @*<p class="text-muted text-center mb-0 appversion">Version : @_appVersion.AssemblyVersion © @DateTime.Now.Year <a href="#">Unity Infotech</a>. All Rights Reserved.</p>*@
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

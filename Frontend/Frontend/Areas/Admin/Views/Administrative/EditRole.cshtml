@model RoleRequestDTO

@{
    Layout = "_LayoutNull";  

    ViewData["Title"] = "EditRole";
}

<form asp-action="Editrole" asp-controller="Administrative" method="post">
    <div class="flex-grow-1">
        <h3 class="text-center">Update Role</h3>
        <hr class="hrClass" />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input hidden asp-for="Id" />
        <div class="form-group mt-3">
            <label asp-for="Name" class="control-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <input type="submit" value="Update Role" class="btn btn-primary w-100 mt-3" />
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
